<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="150dp"
    app:cardCornerRadius="2dp"
    android:layout_margin="10dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/mv_image"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/darksiders" />

            <TextView
                android:id="@+id/mv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@id/mv_image"
                android:fontFamily="@font/baloo"
                android:text="Darksider's"
                android:textSize="20sp" />

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:id="@+id/mv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mv_title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/mv_image"
                android:rating="4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mv_desc"
                android:text="dvcvcbvbjvnbvkbnvkvcvncnvccbcbcbnvknbvnbv"
                android:layout_toRightOf="@id/mv_image"
                android:fontFamily="@font/baloo"
                android:layout_below="@id/mv_rating"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>